{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Kiritori (Debug)",
            "type": "shell",
            "command": "C:\\Program Files (x86)\\Microsoft Visual Studio\\2022\\BuildTools\\MSBuild\\Current\\Bin\\MSBuild.exe",
            "args": [
                "Kiritori.sln",
                "/p:Configuration=Debug",
                "/m:1"
            ],
            "problemMatcher": "$msCompile",
            "group": { "kind": "build", "isDefault": false }
        },
        {
            "label": "Build Kiritori (Release)",
            "type": "shell",
            "command": "C:\\Program Files (x86)\\Microsoft Visual Studio\\2022\\BuildTools\\MSBuild\\Current\\Bin\\MSBuild.exe",
            "args": [
                "Kiritori.sln",
                "/p:Configuration=Release",
                "/m:1"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Package Kiritori",
            "type": "shell",
            "command": ".\\release.bat",   // プロジェクト直下の release.bat
            "group": "build",
            "dependsOn": "Build Kiritori (Release)",
            "problemMatcher": []
        },
        {
            "label": "(ALL)Open dist folder",
            "type": "shell",
            "command": "explorer",
            "args": [".\\dist"],
            "problemMatcher": [],
            "dependsOn": "Package Kiritori",
            "group": { "kind": "build", "isDefault": true }
        }
    ]
}
